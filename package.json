{
  "name": "lifespan-calculator",
  "version": "1.0.0",
  "description": "Danish Lifespan Calculator - Interactive web tool calculating remaining lifespan",
  "main": "index.html",
  "scripts": {
    "start": "serve -s . -l 3000",
    "serve": "serve -s . -l 3000",
    "dev": "tailwindcss -i ./app.css -o ./styles.css --watch",
