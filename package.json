    "build:watch": "tailwindcss -i ./app.css -o ./styles.css --watch",
    "deploy": "npm run build && echo 'Deploying static files'"
  },
  "keywords": [
    "lifespan",
    "calculator",
    "danish",
    "statistics",
    "health"
  ],
  "author": "Mads Holst Jensen <mahope.dk>",
  "license": "MIT",
  "homepage": "https://github.com/mahope/lifespan-calculator",
  "repository": {
    "type": "git",
    "url": "https://github.com/mahope/lifespan-calculator.git"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.17"
  }
}
